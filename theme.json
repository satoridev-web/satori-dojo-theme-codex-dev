{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "name": "Primary",
                    "color": "#0f766e"
                },
                {
                    "slug": "secondary",
                    "name": "Secondary",
                    "color": "#0ea5e9"
                },
                {
                    "slug": "background",
                    "name": "Background",
                    "color": "#ffffff"
                },
                {
                    "slug": "surface",
                    "name": "Surface",
                    "color": "#f7fafc"
                },
                {
                    "slug": "muted",
                    "name": "Muted",
                    "color": "#475569"
                }
            ],
            "defaultPalette": false
        },
        "spacing": {
            "spacingScale": {
                "steps": 6,
                "mediumStep": 6,
                "unit": "px"
            },
            "units": [
                "px",
                "em",
                "rem",
                "%"
            ],
            "blockGap": "1.5rem"
        },
        "typography": {
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "regular",
                    "size": "1rem",
                    "name": "Regular"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                }
            ],
            "lineHeight": true
        },
        "custom": {
            "satori": {
                "notes": "Base presets for SATORI Dojo. Colours are overridden by Customizer CSS variables."
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--satori-dojo-font-body, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif)",
            "fontSize": "var(--satori-dojo-base-font-size, 16px)",
            "lineHeight": "1.6"
        },
        "color": {
            "background": "var(--satori-dojo-color-background, #ffffff)",
            "text": "var(--satori-dojo-color-text, #1f2933)"
        }
    }
}
